<br /><p class="lead">All Surveys</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.title %></td>
        <td><%= link_to 'View Responses', view_responses_path(survey), class: "btn btn-primary", style: "color: #ffffff" %></td>
        <td><%= link_to 'Show', survey, class: "btn btn-primary", style: "color: #ffffff" %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey), class: "btn btn-warning", style: "color: #ffffff" %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: #ffffff" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
